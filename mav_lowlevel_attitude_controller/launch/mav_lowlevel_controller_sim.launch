<launch>
  <arg name="namespace" default="ardrone" />
  <arg name="quad_num" default="1"/>
  <group ns="$(arg namespace)">
    <node name="mav_lowlevel_attitude_controller" pkg="mav_lowlevel_attitude_controller" type="mav_pid_attitude_controller_node" respawn="true" clear_params="true" output="screen" >
      <remap from="odometry" to="/simulation/quad$(arg quad_num)/ground_truth/mavros/position/local" />
      <rosparam file="$(find mav_lowlevel_attitude_controller)/resources/PID_attitude_$(arg namespace).yaml" />
      <param name="verbose" value="true" />
    </node>
  </group>
</launch>
