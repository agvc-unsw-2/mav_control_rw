<launch>
  <arg name="mav_name" default="vrep_quad" />
  <arg name="namespace" default="$(arg mav_name)"/>
  <arg name="uav_num" default="1"/>
  <arg name="thrust_scaling_factor" default="1.00"/>
  <param name="use_sim_time" value="true" />

  <remap from="/$(arg namespace)$(arg uav_num)/rc" to="/$(arg namespace)$(arg uav_num)/joy_remapped" />

  <node pkg="mav_nonlinear_mpc_second_order" name="joystick_remapper" output="screen" type="joystick_remapper.py" >
    <remap from="joy_source" to="/$(arg namespace)$(arg uav_num)/joy" />
    <remap from="joy_dest" to="/$(arg namespace)$(arg uav_num)/joy_remapped" />
    <param name="button_mapping" type="str" value="=" />
    <param name="axis_mapping" type="str" value="1 0 2 3 4 6 5 7" />
  </node>

  <group ns="$(arg namespace)$(arg uav_num)">
    <node name="mav_nonlinear_mpc_second_order" pkg="mav_nonlinear_mpc_second_order" type="nonlinear_mpc_second_order_node"  respawn="true" clear_params="true" output="screen">
      <rosparam file="$(find mav_nonlinear_mpc_second_order)/resources/nonlinear_mpc_second_order_$(arg mav_name).yaml"/>
      <rosparam file="$(find mav_disturbance_observer)/resources/disturbance_observer_$(arg mav_name).yaml"/>
      <rosparam file="$(find mav_disturbance_observer_first_order)/resources/disturbance_observer_$(arg mav_name).yaml"/>
      <rosparam file="$(find mav_integral_disturbance_observer_first_order)/resources/disturbance_observer_$(arg mav_name).yaml"/>
      <param name="use_rc_teleop" value="false" />

      <remap from="odometry" to="/$(arg namespace)$(arg uav_num)/ground_truth/mavros/local_position/odom" />
      <remap from="command/roll_pitch_yawrate_thrust" to="command/roll_pitch_yawrate_thrust_raw" />
    </node>
    
    <node name="joy_node" pkg="joy" type="joy_node" />

    <node name="PID_attitude_controller" pkg="mav_lowlevel_attitude_controller" type="mav_pid_attitude_controller_node" respawn="true" clear_params="true" output="screen">
      <remap from="odometry" to="/$(arg namespace)$(arg uav_num)/ground_truth/mavros/local_position/odom" />
      <rosparam file="$(find mav_lowlevel_attitude_controller)/resources/PID_attitude_$(arg mav_name).yaml" />
    </node>

    <node pkg="mav_nonlinear_mpc_second_order"
          name="attitude_cmd_rescale_and_invert_vrep"
          args="$(arg mav_name) $(arg uav_num) $(arg thrust_scaling_factor)"
          output="screen"
          type="attitude_cmd_rescale_and_invert_vrep.py"
    />

    <node pkg="mav_nonlinear_mpc_second_order" name="mav_actuators_to_float64" args="$(arg mav_name) $(arg uav_num)" output="screen" type="mav_actuators_to_float64.py"/>
    <!-- <node pkg="mav_nonlinear_mpc_second_order" name="attitude_cmd_echo_sim" args="$(arg mav_name) $(arg uav_num)" output="screen" type="attitude_cmd_echo_sim.py"/> -->
    <!-- <node pkg="mav_nonlinear_mpc_second_order" name="attitude_cmd_rescale" args="$(arg mav_name) $(arg uav_num)" output="screen" type="attitude_cmd_rescale.py"/> -->
    <!-- <node pkg="mav_nonlinear_mpc_second_order" name="attitude_cmd_echo_real" args="$(arg mav_name) $(arg uav_num)" output="screen" type="attitude_cmd_echo_real.py"/> -->
    </group>
</launch>


